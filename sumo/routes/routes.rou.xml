<routes>

    <!-- ================= VEHICLE TYPES ================= -->

    <vType id="car" accel="2.6" decel="4.5" length="5" maxSpeed="13.9" />
    <vType id="bike" accel="3.0" decel="5.0" length="2" maxSpeed="11.1" />
    <vType id="bus" accel="1.3" decel="4.0" length="12" maxSpeed="11.1" />
    <vType id="ambulance" accel="3.5" decel="6.0" length="6" maxSpeed="16.7" color="1,0,0"/>

    <!-- ================= ROUTES ================= -->

    <!-- Replace edge IDs if yours are different -->
    <route id="north_south" edges="north_in south_out"/>
    <route id="south_north" edges="south_in north_out"/>
    <route id="east_west" edges="east_in west_out"/>
    <route id="west_east" edges="west_in east_out"/>

    <!-- ================= TRAFFIC FLOWS ================= -->

    <!-- Cars -->
    <flow id="cars_ns" type="car" route="north_south" begin="0" end="900" vehsPerHour="600"/>
    <flow id="cars_sn" type="car" route="south_north" begin="0" end="900" vehsPerHour="600"/>
    <flow id="cars_ew" type="car" route="east_west"  begin="0" end="900" vehsPerHour="500"/>
    <flow id="cars_we" type="car" route="west_east"  begin="0" end="900" vehsPerHour="500"/>

    <!-- Bikes -->
    <flow id="bikes_ns" type="bike" route="north_south" begin="0" end="900" vehsPerHour="300"/>

    <!-- Buses -->
    <flow id="bus_ew" type="bus" route="east_west" begin="0" end="900" vehsPerHour="60"/>

</routes>
